---
import Base from "../layouts/Base.astro"

const {adresse, nom, favori, surface, prix, img} = Astro.props;
---

<div x-data="{favori: '${favori}'}" x-bind:class="{'bg-yellow-100': favori}" class="m-8">
    <h2 class="text-2xl mb-2">{adresse}</h2>
    <p class="text-blue-400 ml-6">{nom}</p>
    <img class="ml-3" src={img} alt={nom} />
    <div>
        <p class="text-sm text-red-600">{prix}€</p>
        <p>{surface}m²</p>
    </div>
    {favori && <p>⭐️</p>}
    <button x-on:click="favori = !favori">Favori</button>
</div>